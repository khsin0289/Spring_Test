@CHARSET "UTF-8";

.chart-img { text-align: center; padding: 0 8px; width: auto; height: 200px; border: 0px; margin: 20px auto 20px; overflow: hidden; display: block; position: relative; }
.chart-div {
/* 	width: 501px; */
	width: 44%;
    height: auto;
    text-align: center;
    border: 0px;
    margin: 15px 28px 15px;
    border-radius: 2px;
/*     box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3); */
    overflow: hidden;
    text-shadow: 0 1px rgba(0,0,0,0.1);
    color: #ffffff;
    background-color: #ffffff;
    display: block;
    position: relative;
    float: left;
    color: #000000;
}

.info-div {
	width: auto;
    height: auto;
    text-align: center;
    font-size: 25px;
    border: 0px;
    margin: 0 auto 20px;
    border-radius: 2px;
    box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
    overflow: hidden;
    text-shadow: 0 1px rgba(0,0,0,0.1);
    color: #ffffff;
    background-color: #ffffff;
    display: block;
    position: relative;
    color: #000000;
}
.info-div-compare {
	width: auto;
    height: auto;
    text-align: center;
    font-size: 15px;
    border: 0px;
    margin: 0 auto 20px;
    border-radius: 2px;
/*     box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3); */
    overflow: hidden;
    text-shadow: 0 1px rgba(0,0,0,0.1);
    color: #ffffff;
    background-color: #ffffff;
    display: block;
    position: relative;
    color: #000000;
}
.info-div-report {
	width: auto;
    height: auto;
    text-align: center;
    font-size: 25px;
    border: 0px;
    margin: 0;
    border-radius: 2px;
/*     box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3); */
    overflow: hidden;
    text-shadow: 0 1px rgba(0,0,0,0.1);
    color: #ffffff;
    background-color: #ffffff;
    display: block;
    position: relative;
    color: #000000;
}
.textarea-report {
	width: 800px;
	height: 310px;
	margin: 0;
	color: #000000;
	border: 2px solid #DFDCDC;
	font-size: 25px;
	resize:none;
}
.info-text {
	color: #8a8a8a;
	font-size: 25px;
}
.info-text-font {
	color: #666666;
	font-size: 25px;
}
.text-border {
	border: 2px solid #009edb;
	width: 350px;
    text-align: center;
    padding: 10px;
    margin-top: 20px;
}
.info-text-left-compare, .info-text-right-compare {
	color: #8a8a8a;
	font-size: 20px;
}
.info-text-memo {
	background-color: #ffffff;
	color: #000000;
	width: 340px;
	height: 70px;
	overflow-y: scroll;
}
